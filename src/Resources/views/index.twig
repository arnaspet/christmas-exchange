<h1 class="text-center">Merry Christmas everyone !</h1>
<p class="text-center"><i class="fa fa-gift fa-4x white-color"></i></p>
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <form class="form-horizontal" role="form" method="post" action="/send-emails">
                <div class="col-xs-12 text-center m-t-20">
                    <div class="receivers-container">
                    {% for receiver in form.receivers %}
                        <div class="form-group receiver-row">
                            <div class="col-sm-6">
                                <div class="input-icon">
                                    <span class="fa fa-user"></span>
                                    {{- form_widget(receiver.name, {attr: {class: 'form-control name', placeholder: 'Friends name'}}) -}}
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="input-icon">
                                    <span class="fa fa-envelope-o"></span>
                                    {{- form_widget(receiver.email, {attr: {class: 'form-control email', placeholder: 'Friends Email'}}) -}}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    </div>
                    <button id="add-more-receivers" class="btn btn-warning btn-embossed m-r-20"><i class="fa fa-plus"></i> Add more people</button>
                    <button class="btn btn-primary btn-embossed" type="submit"><i class="fa fa-paper-plane-o"></i> Send !</button>
                </div>
                {{- form_rest(form) -}}
            </form>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
